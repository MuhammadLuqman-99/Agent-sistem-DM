# AgentOS API Production Environment Configuration
# CRITICAL: Update with your actual secure values before deployment

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://admin-agent-teamsale.web.app

# API Rate Limiting (Enterprise-grade)
API_RATE_LIMIT=1000
ADMIN_API_RATE_LIMIT=200

# Firebase Configuration
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
# OR use FIREBASE_SERVICE_ACCOUNT with the entire JSON content as a string

# Shopify Configuration
SHOPIFY_SHOP_NAME=your-shop-name
SHOPIFY_ACCESS_TOKEN=your-access-token
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret

# Database URLs
FIREBASE_DATABASE_URL=https://admin-agent-teamsale-default-rtdb.firebaseio.com

# Security - CRITICAL: Generate strong random values
SESSION_SECRET=agentos-super-secure-session-secret-2024-enterprise
JWT_SECRET=agentos-jwt-secret-key-enterprise-2024-minimum-64-characters-long
CSRF_SECRET=agentos-csrf-secret-enterprise-2024-secure

# JWT Configuration
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Performance & Security
MAX_CONCURRENT_REQUESTS=200
REQUEST_TIMEOUT=30000
MAX_FILE_SIZE=1048576
MAX_BODY_SIZE=1048576

# SSL/TLS Configuration
FORCE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/certificate
SSL_KEY_PATH=/path/to/ssl/private/key

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true
ENABLE_SECURITY_LOG=true

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# Database Performance
FIREBASE_MAX_CONNECTIONS=100
FIREBASE_TIMEOUT=30000
FIREBASE_RETRY_ATTEMPTS=3

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_MAX_PAYLOAD_SIZE=1048576
