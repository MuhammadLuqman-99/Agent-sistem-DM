{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "*.md",
      "*.bat",
      "*.exe",
      "*.sh",
      "cleanup.bat",
      "deploy.bat",
      "archive/**",
      "api/**",
      ".git/**",
      ".gitignore",
      "README.md",
      "DEPLOY_NOW.md",
      "ENTERPRISE_FRONTEND_UPGRADE.md",
      "ENTERPRISE_SHOPIFY_INTEGRATION.md",
      "FIREBASE_DEPLOYMENT_GUIDE.md",
      "CLEANUP_GUIDE.md",
      "FINAL_PROJECT_STRUCTURE.md"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/admin",
        "destination": "/pages/enterprise-admin-dashboard.html"
      },
      {
        "source": "/agent",
        "destination": "/pages/enterprise-agent-dashboard.html"
      },
      {
        "source": "/admin-enterprise",
        "destination": "/pages/enterprise-admin-dashboard.html"
      },
      {
        "source": "/agent-enterprise",
        "destination": "/pages/enterprise-agent-dashboard.html"
      },
      {
        "source": "/admin-dashboard",
        "destination": "/pages/enterprise-admin-dashboard.html"
      },
      {
        "source": "/agent-dashboard", 
        "destination": "/pages/enterprise-agent-dashboard.html"
      },
      {
        "source": "/login",
        "destination": "/pages/firebase-login.html"
      },
      {
        "source": "/auth",
        "destination": "/pages/firebase-login.html"
      },
      {
        "source": "/logout",
        "destination": "/pages/logout.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "**/*.@(png|jpg|jpeg|gif|svg|ico|webp)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options", 
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https: blob: ui-avatars.com; connect-src 'self' https:; media-src 'self' https:;"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}